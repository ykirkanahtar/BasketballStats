@page
@using BasketballStats.WebSite.Pages
@model BasketballStats.WebSite.Pages.MatchModel
@{
    ViewData["Title"] = "Maçlar";
}

<div class="row-fluid">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        <br />
    </div>
</div>

<div class="row-fluid">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                    <tr>
                        <th>Tarih</th>
                        <th>Sıra</th>
                        <th>Maç Süresi</th>
                        <th>Ev Sahibi Takım</th>
                        <th>Misafir Takım</th>
                        <th>Skor</th>
                        <th>Video Link</th>
                        <th>Detaylar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var match in Model.Matches)
                    {
                        <tr>
                            <td>@match.Match.MatchDate.ToString("dd-MM-yyyy")</td>
                            <td>@match.Match.Order</td>
                            <td>@match.Match.DurationInMinutes</td>
                            <td>@match.Match.HomeTeam.Name</td>
                            <td>@match.Match.AwayTeam.Name</td>
                            <td>@match.HomeTeamScore - @match.AwayTeamScore</td>
                            <td><a href="@match.Match.VideoLink" target="_blank">@match.Match.VideoLink</a></td>
                            <td><a asp-page="MatchDetail" asp-route-id="@match.Match.Id">Tıklayınız</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
