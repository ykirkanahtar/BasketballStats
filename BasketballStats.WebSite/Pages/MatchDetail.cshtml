@page
    @model MatchDetailModel
        @{
            ViewData["Title"] = "İstatistikler";
        }

        <div class="row-fluid">
            <div class="col-md-12">
                <h2>@ViewData["Title"]</h2>
                <br />

                <label>Tarih:</label> @Model.MatchDetailInfo.MatchInfo.MatchDate.ToString("dd-MM-yyyy")<br />
                <label>Sıra:</label> @Model.MatchDetailInfo.MatchInfo.Order<br />
                <label>Video Link: </label><a href="@Model.MatchDetailInfo.MatchInfo.VideoLink" target="_blank">@Model.MatchDetailInfo.MatchInfo.VideoLink</a>
                <br />
                <br />
                <br />
            </div>
        </div>

        @{
            var teams = new List<Models.TeamDetail>();
            teams.Add(Model.MatchDetailInfo.HomeTeam);
            teams.Add(Model.MatchDetailInfo.AwayTeam);
        }

        @foreach (var team in teams)
        {
            <div class="row-fluid">
                <div class="col-md-12">
                    <label>Takım Adı: </label>@team.TeamInfo.Name<br />
                    <label>Rengi: </label>@team.TeamInfo.Color<br />
                    <label>Yaş Ort.: </label>@team.AgeRatio<br />
                    <label>Oyuncu Sayısı: </label>@team.PlayerStats.Count
                    <div class="table-responsive">

                        <table class="table table-bordered table-condensed table-hover table-striped text-center">
                            <thead>
                                <tr>
                                    <th>Oyuncu</th>
                                    <th class="text-center">1 Sayı</th>
                                    <th class="text-center">2 Sayı</th>
                                    <th class="text-center">Top. Sayı</th>
                                    <th class="text-center">Ribaunt</th>
                                    <th class="text-center">Kapma</th>
                                    <th class="text-center">Asist</th>
                                    <th class="text-center">Kayıp</th>
                                    <th class="text-center">Kesme</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var player in team.PlayerStats)
                                {
                                    <tr>
                                        <td class="text-left"><a asp-page="PlayerDetail" asp-route-id="@player.Player.Id">@player.Player.Name @player.Player.Surname</a></td>
                                        <td>@decimal.Truncate(player.Stat.OnePoint) / @decimal.Truncate((player.Stat.OnePoint + player.Stat.MissingOnePoint))</td>
                                        <td>@decimal.Truncate(player.Stat.TwoPoint) / @decimal.Truncate((player.Stat.TwoPoint + player.Stat.MissingTwoPoint))</td>
                                        <td>@decimal.Truncate(player.Stat.OnePoint + player.Stat.TwoPoint * 2)</td>
                                        <td>@decimal.Truncate(player.Stat.Rebound)</td>
                                        <td>@decimal.Truncate(player.Stat.StealBall)</td>
                                        <td>@decimal.Truncate(player.Stat.Assist)</td>
                                        <td>@decimal.Truncate(player.Stat.LooseBall)</td>
                                        <td>@decimal.Truncate(player.Stat.Interrupt)</td>
                                    </tr>
                                }
                                <tr>
                                    <td><b>Toplam</b></td>
                                    <td><b>@decimal.Truncate(team.TeamStats.OnePoint) / @decimal.Truncate(team.TeamStats.OnePoint + team.TeamStats.MissingOnePoint)</b></td>
                                    <td><b>@decimal.Truncate(team.TeamStats.TwoPoint) / @decimal.Truncate(team.TeamStats.TwoPoint + team.TeamStats.MissingTwoPoint)</b></td>
                                    <td><b>@decimal.Truncate(team.TeamStats.OnePoint + team.TeamStats.TwoPoint * 2)</b></td>
                                    <td><b>@decimal.Truncate(team.TeamStats.Rebound)</b></td>
                                    <td><b>@decimal.Truncate(team.TeamStats.StealBall)</b></td>
                                    <td><b>@decimal.Truncate(team.TeamStats.Assist)</b></td>
                                    <td><b>@decimal.Truncate(team.TeamStats.LooseBall)</b></td>
                                    <td><b>@decimal.Truncate(team.TeamStats.Interrupt)</b></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        }

        <div class="row-fluid">
            <div class="col-md-12">
                <a asp-page="Match">Maçlar Sayfasına Geri Dön</a>
                <br />
            </div>
        </div>
